@page "/Registro"
<html>
   <head>
    <style>
        .frame {
    width: 50%;
  display: flex;
  flex-direction: column;
  border: 2px solid #ccc;
  margin: 20px;
}

.header {
 background-color: #f1f1f1;
  padding: 20px;
  text-align: center;
  border: 2px solid #ccc;
}

.body {
  flex-grow: 1;
  padding: 20px;
  text-align: center;
}

.footer {
  background-color: #f1f1f1;
  padding: 20px;
  text-align: center;
   border: 2px solid #ccc ;
}


    </style>

   </head>

<div class="frame">

  <div class="header">
  <h2>Registro de ocupaciones</h2>
  </div>





  <div class="body">

<form>

<label for="OcupacionId">OcupacionId</label><br>
  <input type="num" id="OcupacionId" name="OcupacionId">

